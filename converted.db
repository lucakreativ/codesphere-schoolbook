-- import to SQLite by running: sqlite3.exe db.sqlite3 -init sqlite.sql

PRAGMA journal_mode = MEMORY;
PRAGMA synchronous = OFF;
PRAGMA foreign_keys = OFF;
PRAGMA ignore_check_constraints = OFF;
PRAGMA auto_vacuum = NONE;
PRAGMA secure_delete = OFF;
BEGIN TRANSACTION;

DROP TABLE IF EXISTS `addedstudent`;

CREATE TABLE `addedstudent` (
`ID` TEXT  NOT NULL,
`Stufe` TEXT  DEFAULT NULL,
`Klasse` TEXT  DEFAULT NULL,
`Vorname` TEXT  DEFAULT NULL,
`Nachname` TEXT  DEFAULT NULL,
`Religion` TEXT  DEFAULT NULL,
`Fremdsp1` TEXT  DEFAULT NULL,
`Fremdsp2` TEXT  DEFAULT NULL,
`Fremdsp3` TEXT  DEFAULT NULL,
PRIMARY KEY (`ID`)
);
DROP TABLE IF EXISTS `ausgeliehen`;

CREATE TABLE `ausgeliehen` (
`ID` TEXT  DEFAULT NULL,
`ISBN` TEXT  DEFAULT NULL,
`Anzahl` int DEFAULT NULL
);
DROP TABLE IF EXISTS `bemgeld`;

CREATE TABLE `bemgeld` (
`ID` TEXT  NOT NULL,
`bemerkung` TEXT  DEFAULT NULL,
`schaden` double(7,2) DEFAULT '0.00',
PRIMARY KEY (`ID`)
);
DROP TABLE IF EXISTS `buchstufe`;

CREATE TABLE `buchstufe` (
`stufe` TEXT  NOT NULL,
`ISBN` TEXT  NOT NULL,
`abgeben` int DEFAULT '0'
);
DROP TABLE IF EXISTS `buecher`;

CREATE TABLE `buecher` (
`ISBN` TEXT  NOT NULL,
`Titel` TEXT  DEFAULT NULL,
`Verlag` TEXT  DEFAULT NULL,
`preis` double(10,2) DEFAULT '0.00',
`Fach` TEXT  DEFAULT NULL,
PRIMARY KEY (`ISBN`)
);
DROP TABLE IF EXISTS `protocolaus`;

CREATE TABLE `protocolaus` (
`ID` int NOT NULL ,
`type` int DEFAULT NULL,
`schuelerID` TEXT  DEFAULT NULL,
`ISBN` TEXT  DEFAULT NULL,
`Anzahl` int DEFAULT NULL,
`unix` int DEFAULT NULL,
`user` TEXT  DEFAULT NULL,
PRIMARY KEY (`ID`)
);
DROP TABLE IF EXISTS `protocollogin`;

CREATE TABLE `protocollogin` (
`ID` int NOT NULL ,
`user` TEXT  DEFAULT NULL,
`unix` int DEFAULT NULL,
`erfolgreich` tinyINTEGER DEFAULT NULL,
`IP` TEXT  DEFAULT NULL,
PRIMARY KEY (`ID`)
);
DROP TABLE IF EXISTS `schueler`;

CREATE TABLE `schueler` (
`ID` TEXT  NOT NULL,
`Stufe` TEXT  DEFAULT NULL,
`Klasse` TEXT  DEFAULT NULL,
`Vorname` TEXT  DEFAULT NULL,
`Nachname` TEXT  DEFAULT NULL,
`Religion` TEXT  DEFAULT NULL,
`Fremdsp1` TEXT  DEFAULT NULL,
`Fremdsp2` TEXT  DEFAULT NULL,
`Fremdsp3` TEXT  DEFAULT NULL,
PRIMARY KEY (`ID`)
);
DROP TABLE IF EXISTS `user`;

CREATE TABLE `user` (
`username` TEXT  NOT NULL,
`hash` TEXT  DEFAULT NULL,
`privileges` int DEFAULT NULL,
`outside` int DEFAULT '0',
PRIMARY KEY (`username`)
);





COMMIT;
PRAGMA ignore_check_constraints = ON;
PRAGMA foreign_keys = ON;
PRAGMA journal_mode = WAL;
PRAGMA synchronous = NORMAL;
